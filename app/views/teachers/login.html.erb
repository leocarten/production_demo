<h2 class="ms-1 mt-4">Enter teacher credentials</h2>
<%= form_for @teacher, url: check_credentials_teachers_path, method: :post do |f| -%>
    <div class="mb-3">
        <label for="teacher_email">Email</label>
        <%= f.text_field :username, id: 'teacher_email', class: 'form-control', placeholder: 'example@gmail.com', required: true %>
    </div>

    <div class="mb-3">
        <label for="teacher_password">Password</label>
        <%= f.password_field :password, id: 'teacher_password', class: 'form-control', placeholder: 'password123', required: true %>
    </div>

    <%= f.submit "Submit", class: "btn btn-primary" %>
    <%= link_to 'Cancel', root_path,  class: "btn btn-danger"%>
<% end -%>
